<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chromeinfotech.mrphone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.ui.activity.main.MainActivity" />
        <activity android:name=".view.ui.activity.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.activity.welcome.WelcomeActivity" />
        <activity android:name=".view.ui.activity.country.ChooseCountryActivity" />
        <activity android:name=".view.ui.activity.serachPhone.SearchPhoneActivity"></activity>
        <activity
            android:name=".view.ui.activity.detail.DetailActivity"
            android:parentActivityName=".view.ui.activity.main.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ui.activity.main.MainActivity" />
        </activity>
        <activity android:name=".view.ui.activity.phonefinder.PhoneFinderActivity" />
        <activity android:name=".view.ui.activity.compare.CompareActivty"></activity>
        <activity android:name=".view.ui.activity.serachPhone.PhonesearchDetailsActivity"></activity>
    </application>

</manifest>