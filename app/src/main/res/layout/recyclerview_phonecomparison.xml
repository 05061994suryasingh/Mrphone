<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageview_phonecomparison"
            android:layout_width="80dp"
            android:layout_height="59dp"
            android:src="@drawable/ic_set_1_battery"
            android:scaleType="fitCenter" />
        <TextView android:textSize="18sp"
            android:textColor="#01b1c1"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textview_heading_phonecomparison"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="32dp"
            android:layout_marginBottom="6dp"
            android:text="Battery Capacity"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp">

        <TextView android:textSize="15sp"
            android:textColor="#000"
            android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:id="@+id/textview_value_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="3000 mAh"
            android:layout_weight="0.51"
            android:fontFamily="sans-serif-normal" />

        <TextView android:textSize="15sp"
            android:textColor="#000"
            android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill" android:id="@+id/textview_value_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="3300 mAh" android:layout_weight="1.0"
            android:fontFamily="sans-serif-normal" />
    </LinearLayout>
</LinearLayout>
