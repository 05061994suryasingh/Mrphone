<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_marginBottom="@dimen/dim_10"
    android:layout_marginTop="@dimen/dim_10"
    android:layout_height="80dp">
    <ImageView
        android:id="@+id/img_phonefinder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_set_1_brands">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginLeft="@dimen/dim_10"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:focusableInTouchMode="false"
        android:background="@drawable/phone_finder_textview_categorycount_color"
        android:layout_toEndOf="@+id/img_phonefinder"
        android:id="@+id/txt_categorycount"/>
    <TextView
        android:id="@+id/txt_phonefinder"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_phonefinder"
        android:layout_marginTop="@dimen/dim_10"
        android:gravity="center|start"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="operating syatem"/>

</RelativeLayout>
