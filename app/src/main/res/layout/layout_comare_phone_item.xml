<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/dim_5"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/dim_40"
        android:id="@+id/img_phonecompareicon"
        android:layout_height="@dimen/dim_40"
        android:src="@drawable/phone6"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_50"
        android:layout_marginTop="@dimen/dim_10"
        android:id="@+id/txt_phoneName"
        android:gravity="center|center_vertical"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/img_phoneicon"
        android:text="Motorola Moto g5 plus"/>
</RelativeLayout>